<div class="container py-5">
  <div class="row">
    <div class="col-12 col md-6 offset lg-3">
      <div class="bg-white rounded p-3 shadow">
        <h3>Add a new bookmark to your <%= @list.name %> list</h3>
        <%= simple_form_for [@list, @bookmark] do |f| %>
        <%= f.input :comment, placeholder: 'Enter the comment for the movie you choose' %>
        <%= f.association :movie %>
        <%= f.submit "Submit bookmark", class: "btn btn-flat" %>
        <% end %>
      </div>
    </div>
  </div>
</div>
